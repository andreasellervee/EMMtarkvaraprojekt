<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >

        <Button
            android:id="@+id/map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map" />

        <TextView
            android:id="@+id/asukoht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pikkus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/avatud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Kirjeldus"
            android:textColor="#1A661A"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/kirjeldus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Huviobjektid"
            android:textColor="#1A661A"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/noPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Huvipunktid puuduvad"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/pointsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="#000000"
            android:dividerHeight="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Kommentaarid"
            android:textColor="#1A661A"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/noComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kommentaarid puuduvad"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/commentsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="#000000"
            android:dividerHeight="2dp" />
    </LinearLayout>

</ScrollView>